@model PagedList.IPagedList<Website_sell_books.Models.Sach>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
}

<p>
    @Html.ActionLink("Thêm mới sách", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Tên chủ đề")
        </th>
        <th>
            @Html.DisplayName("Nhà xuất bản")
        </th>
        <th>
            @Html.DisplayName("Tên sách")
        </th>
        <th>
            @Html.DisplayName("Giá bán")
        </th>
        <th>
            @Html.DisplayName("Mô tả")
        </th>
        <th>
            @Html.DisplayName("Ngày cập nhật")
        </th>
        <th>
            @Html.DisplayName("Ảnh bìa")
        </th>
        <th>
            @Html.DisplayName("Số lượng")
        </th>
        <th>
            @Html.DisplayName("Sách mới")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ChuDe.TenChuDe)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NhaXuatBan.TenNXB)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TenSach)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GiaBan)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MoTa)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NgayCapNhat)
        </td>
        <td>
            <img src="@Url.Content("~/wwwroot/images/books/"+ item.AnhBia)" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SoLuongTon)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Moi)
        </td>
        <td>
            @Html.ActionLink("Chỉnh sửa", "Edit", new { id=item.MaSach }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.MaSach }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.MaSach })
        </td>
    </tr>
}

</table>

@Html.PagedListPager(Model,page => Url.Action("Index", new {page}))