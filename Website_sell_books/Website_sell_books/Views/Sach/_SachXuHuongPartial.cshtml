
<div class="tg-widgetcontent">

    <ul>

        @foreach (var item in Model)
        {
            <li>
                <article class="tg-post">
                    <figure ><a  style="width:100px; height:150px" href="javascript:void(0);"><img src="@Url.Content("~/wwwroot/images/books/"+ item.AnhBia)"  alt="image description"></a></figure>
                    <div class="tg-postcontent">
                        <div class="tg-posttitle">
                            <h3><a href="javascript:void(0);">@item.TenSach</a></h3>
                        </div>
                        <span class="tg-bookwriter">By: <a href="javascript:void(0);">@item.GiaBan</a></span>
                    </div>
                </article>
            </li>
        }


    </ul>

</div>
