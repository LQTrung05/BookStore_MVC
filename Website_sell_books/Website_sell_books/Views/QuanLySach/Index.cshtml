@model PagedList.IPagedList<Website_sell_books.Models.Sach>
@using PagedList.Mvc
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
}


<p>
    @Html.ActionLink("Thêm sách mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Tên Chủ đề")
        </th>
        <th>
            @Html.DisplayName("Tên NXB")
        </th>
        <th>
            @Html.DisplayName("Tên Sách")
        </th>
        <th>
            @Html.DisplayName("Giá bán")
        </th>
        <th>
            @Html.DisplayName("Mô tả")
        </th>
        <th>
            @Html.DisplayName("Ngày cập nhật")
        </th>
        <th>
            @Html.DisplayName("Ảnh bìa")
        </th>
        <th>
            @Html.DisplayName("Số lượng")
        </th>
        <th>
            @Html.DisplayName("Mới")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ChuDe.TenChuDe)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NhaXuatBan.TenNXB)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenSach)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GiaBan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MoTa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayCapNhat)
            </td>
            <td>
                <img src="@Url.Content("~/wwwroot/images/books/"+ item.AnhBia)" alt="image description" >
                @Html.DisplayFor(modelItem => item.AnhBia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoLuongTon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Moi)
            </td>
            <td>
                @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.MaSach }) 
                </td>
            <td>
                @Html.ActionLink("Chi tiết", "Details", new { id = item.MaSach }) 
                </td>
            <td>
                @Html.ActionLink("Xóa", "Delete", new { id = item.MaSach })
            </td>
        </tr>
    }

</table>
@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
